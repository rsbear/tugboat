  "lsp": {
    "deno": {
      "settings": {
        "deno": {
          "enable": true
        }
      }
    },
    "biome": {
      "enable_lsp_tasks": false
    }
  },
  "languages": {
    "JavaScript": {
      "language_servers": ["deno", "!vtsls", "!biome", "!eslint"],
      "formatter": "language_server"
    },
    "TypeScript": {
      "language_servers": ["deno", "!vtsls", "!biome", "!eslint"],
      // "formatter": { "language_server": { "name": "biome" } }
      "formatter": "language_server"
    },
    "TSX": {
      "language_servers": ["deno", "!vtsls", "!biome", "!eslint"],
      // "formatter": { "language_server": { "name": "biome" } }
      "formatter": "language_server"
    }
  }
}
